<h1>Listing invitations</h1>

<table>
  <thead>
    <tr>
      <th>Child</th>
      <th>Secret code</th>
      <th>Expiry date</th>
      <th>Status</th>
      <th>Message</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.child %></td>
        <td><%= invitation.secret_code %></td>
        <td><%= invitation.expiry_date %></td>
        <td><%= invitation.status %></td>
        <td><%= invitation.message %></td>
        <td><%= link_to 'Show', invitation %></td>
        <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
        <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

