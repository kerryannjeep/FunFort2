<p id="notice"><%= notice %></p>

<head>
  <link rel="stylesheet" type= "text/css" bref="application.css.scss"
</head>
<div class="row">
  <aside class="span4">
    <section>
        <h1>
          <%= @child.first_name %>'s Fort!
          <%= gravatar_for @child %>
        </h1>
    </section>
  </aside>
</div>
<h3>Friends</h3>
<ul>
  <% for friendship in @child.friendships %>
      <li>
        <%= gravatar_for Friend, size: 55 %>
        <%= friendship.friend.first_name %>
      </li>
  <% end %>
</ul>

<%= link_to "Add Friend", new_friendship_path %>



<h3>Sent Messages</h3>
<ul>
  <% for message in @child.messages %>
      <li>
        <b>To:</b> <%= message.friendship.friend_name %>,
        <b>Message:</b> <%= message.data %>
      </li>
  <% end %>
</ul>
<%= link_to "Send Message", new_message_path %>

<h3>Received Messages</h3>
<ul>
  <% for message in @child.received_messages %>
      <li>
        <b>From:</b> <%= message.child.first_name %>, <b>Message:</b> <%= message.data %>
      </li>
  <% end %>
</ul>
